rule all:
    input:
        rules.all_span_nbhmm2nz_results.input,
        rules.all_span_nbhmm3nz_results.input,
        rules.all_span_nbhmm4_results.input,
        rules.all_span_islands_results.input,
        # rules.all_span_nbhmm4nz_results.input,

