from glob import glob
import os
import re

SAMPLES = list(re.sub('\.bam','',os.path.basename(f))
               for f in glob('/mnt/stripe/shpynov/2021_noise2/bams/*.bam') if
               'input' not in f and ('k27' in f.lower() or 'k36' in f.lower() or 'k4' in f.lower()))

######## nbhmm2nz ##################
rule all_span_nbhmm2nz_results:
    input:
        span_peaks=expand(
            f'/mnt/stripe/shpynov/2021_noise2/nbhmm2nz/{{sample}}_{config["fdr"]}.peak',
            sample=SAMPLES
        )

rule call_peaks_span_nbhmm2nz:
    input:
        signal=f'/mnt/stripe/shpynov/2021_noise2/bams/{{sample}}.bam'
    output: f'/mnt/stripe/shpynov/2021_noise2/nbhmm2nz/{{sample}}_{{fdr}}.peak'
    log: f'nbhmm2nz_{{sample}}_{{fdr}}.log'
    shell:
        'cd /mnt/stripe/shpynov/2021_noise2 && '
        'java -jar /mnt/stripe/shpynov/2021_noise2/span234.jar analyze-experimental --type nbhmm2nz '
        '-t /mnt/stripe/shpynov/2021_noise2/bams/{wildcards.sample}.bam '
        '-peaks {output} -fdr {wildcards.fdr} '
        '-cs /mnt/stripe/shpynov/2021_noise2/hg38.chrom.sizes &> {log}'


